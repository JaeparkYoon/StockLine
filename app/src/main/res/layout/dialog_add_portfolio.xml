<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color_4D000000"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@color/color_ffffff"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_line"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            >
            <TextView
                android:id="@+id/txt_subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="종목명"
                android:textSize="18sp"
                android:textColor="@color/color_666666"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txt_purchase_date"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/et_subject_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="매매한 회사 이름"
                android:textSize="16sp"
                android:background="@drawable/border_line_bottom"
                app:layout_constraintTop_toTopOf="@+id/txt_subject_name"
                app:layout_constraintBottom_toBottomOf="@+id/txt_subject_name"
                app:layout_constraintStart_toEndOf="@+id/txt_subject_name"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_purchase_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매수일"
                android:textSize="18sp"
                android:textColor="@color/color_666666"
                app:layout_constraintTop_toBottomOf="@+id/et_subject_name"
                app:layout_constraintBottom_toTopOf="@+id/txt_purchase_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.2"
                />

            <EditText
                android:id="@+id/et_purchase_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="매수한 날짜"
                android:focusable="false"
                android:textSize="16sp"
                android:background="@drawable/border_line_bottom"
                app:layout_constraintTop_toTopOf="@+id/txt_purchase_date"
                app:layout_constraintBottom_toBottomOf="@+id/txt_purchase_date"
                app:layout_constraintStart_toEndOf="@+id/txt_purchase_date"
                app:layout_constraintWidth_percent="0.3"
                />

            <TextView
                android:id="@+id/txt_sell_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/MainActivity_Sell_Date"
                android:textSize="18sp"
                android:textColor="@color/color_666666"
                app:layout_constraintTop_toTopOf="@+id/txt_purchase_date"
                app:layout_constraintBottom_toBottomOf="@+id/txt_purchase_date"
                app:layout_constraintEnd_toStartOf="@+id/et_sell_date"
                app:layout_constraintWidth_percent="0.2"
                />

            <EditText
                android:id="@+id/et_sell_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="매도한 날짜"
                android:focusable="false"
                android:textSize="16sp"
                android:background="@drawable/border_line_bottom"
                app:layout_constraintTop_toTopOf="@+id/txt_sell_date"
                app:layout_constraintBottom_toBottomOf="@+id/txt_sell_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.3"
                />

            <TextView
                android:id="@+id/txt_purchase_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MainActivity_Purchase_Price"
                android:textColor="@color/color_666666"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/txt_purchase_date"
                app:layout_constraintBottom_toTopOf="@+id/txt_sell_price"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/et_purchase_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="1주당 매수한 금액"
                android:textSize="16sp"
                android:inputType="number"
                android:background="@drawable/border_line_bottom"
                app:layout_constraintTop_toTopOf="@+id/txt_purchase_price"
                app:layout_constraintBottom_toBottomOf="@+id/txt_purchase_price"
                app:layout_constraintStart_toEndOf="@+id/txt_purchase_price"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MainActivity_Sell_Price"
                android:textColor="@color/color_666666"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/txt_purchase_price"
                app:layout_constraintBottom_toTopOf="@+id/txt_sell_count"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/et_sell_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="1주당 매도한 금액"
                android:textSize="16sp"
                android:inputType="number"
                android:background="@drawable/border_line_bottom"
                app:layout_constraintTop_toTopOf="@+id/txt_sell_price"
                app:layout_constraintBottom_toBottomOf="@+id/txt_sell_price"
                app:layout_constraintStart_toEndOf="@+id/txt_sell_price"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_sell_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/MainActivity_Sell_Count"
                android:textColor="@color/color_666666"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/txt_sell_price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/et_sell_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="매도한 수량"
                android:textSize="16sp"
                android:inputType="number"
                android:background="@drawable/border_line_bottom"
                app:layout_constraintTop_toTopOf="@+id/txt_sell_count"
                app:layout_constraintBottom_toBottomOf="@+id/txt_sell_count"
                app:layout_constraintStart_toEndOf="@+id/txt_sell_count"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line_1a000000"
            app:layout_constraintBottom_toTopOf="@+id/txt_cancel"
            />
        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/Common_Cancel"
            android:textColor="@color/color_e52b4e"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_complete"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/color_line_1a000000"
            app:layout_constraintStart_toEndOf="@+id/txt_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/txt_complete"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/Common_Complete"
            android:textColor="@color/color_222222"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_cancel"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>