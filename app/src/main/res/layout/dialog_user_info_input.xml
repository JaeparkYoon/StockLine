<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="data"
            type="com.yjpapp.stockportfolio.function.login.UserInfoInputDialog.Data" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/EditMainDialog_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_300dp"
        android:layout_marginStart="@dimen/common_30dp"
        android:layout_marginEnd="@dimen/common_30dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_ffffff_r12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="@dimen/common_20dp"
            android:paddingEnd="@dimen/common_20dp"
            android:paddingTop="@dimen/common_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
            >
            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/common_15dp"
                android:text="@string/Login_User_Input_Dialog_Title"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_label_name"
                android:layout_width="@dimen/common_60dp"
                android:layout_height="wrap_content"
                android:text="@string/Common_Name"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/common_15dp"
                binding:visibility="@{!data.nameExist}"
                app:layout_constraintTop_toTopOf="@+id/et_name"
                app:layout_constraintBottom_toBottomOf="@+id/et_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/et_name"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_20dp"
                android:layout_marginTop="@dimen/common_20dp"
                app:layout_constraintStart_toEndOf="@+id/txt_label_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_content"
                />

            <TextView
                android:id="@+id/txt_label_email"
                android:layout_width="@dimen/common_60dp"
                android:layout_height="wrap_content"
                android:text="@string/Common_Email"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/common_15dp"
                app:layout_constraintTop_toTopOf="@+id/et_email"
                app:layout_constraintBottom_toBottomOf="@+id/et_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/et_email"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_20dp"
                android:layout_marginTop="@dimen/common_20dp"
                app:layout_constraintStart_toEndOf="@+id/txt_label_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_50dp"
            android:background="@drawable/bg_e52b4e_r12_bottom_left_right"
            android:gravity="center"
            android:text="@string/Common_Ok"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/common_15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
