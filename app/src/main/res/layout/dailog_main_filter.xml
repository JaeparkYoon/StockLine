<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_MainFilterDialog_Parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/round_box"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:background="@drawable/round_box"
    >

    <TextView
        android:id="@+id/txt_MainFilterDialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_12dp"
        android:text="@string/MainFilterDialog_Title"
        android:textSize="14sp"
        android:textColor="@color/color_666666"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_MainFilterDialog_cancel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="18dp"
        android:text="@string/Common_Cancel"
        android:textSize="14sp"
        android:textColor="@color/color_e52b4e"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_MainFilterDialog_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10dp"
        android:paddingTop="@dimen/common_10dp"
        android:paddingBottom="@dimen/common_10dp"
        android:text="@string/MainFilterDialog_All"
        android:textColor="@color/color_222222"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_MainFilterDialog_gain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_MainFilterDialog_title" />

    <TextView
        android:id="@+id/txt_MainFilterDialog_gain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_10dp"
        android:paddingBottom="@dimen/common_10dp"
        android:text="@string/MainFilterDialog_Gain"
        android:textSize="16sp"
        android:textColor="@color/color_222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_MainFilterDialog_all"
        app:layout_constraintBottom_toTopOf="@+id/txt_MainFilterDialog_loss"
        />

    <TextView
        android:id="@+id/txt_MainFilterDialog_loss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_5dp"
        android:paddingTop="@dimen/common_10dp"
        android:paddingBottom="@dimen/common_10dp"
        android:text="@string/MainFilterDialog_Loss"
        android:textSize="16sp"
        android:textColor="@color/color_222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_MainFilterDialog_gain"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>