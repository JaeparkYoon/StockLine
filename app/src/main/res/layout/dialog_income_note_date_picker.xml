<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_222222_r12_topleft_topright"
    android:paddingTop="@dimen/common_20dp"
    android:paddingBottom="@dimen/common_20dp"
    >

    <TextView
        android:id="@+id/txtStartMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작월"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/common_14dp"
        app:layout_constraintEnd_toStartOf="@+id/startPickerYear"
        app:layout_constraintTop_toTopOf="@+id/startPickerYear"
        app:layout_constraintBottom_toBottomOf="@+id/startPickerYear"
        app:layout_constraintStart_toStartOf="parent"
        />

    <NumberPicker
        android:id="@+id/startPickerYear"
        android:layout_width="@dimen/common_100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtStartMonth"
        app:layout_constraintEnd_toStartOf="@+id/startPickerMonth"
        />
    <NumberPicker
        android:id="@+id/startPickerMonth"
        android:layout_width="@dimen/common_100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/startPickerYear"
        app:layout_constraintBottom_toBottomOf="@+id/startPickerYear"
        app:layout_constraintStart_toEndOf="@+id/startPickerYear"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtEndMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료월"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/common_14dp"
        app:layout_constraintEnd_toStartOf="@+id/endPickerYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/endPickerYear"
        app:layout_constraintBottom_toBottomOf="@+id/endPickerYear"
        />

    <NumberPicker
        android:id="@+id/endPickerYear"
        android:layout_width="@dimen/common_100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_20dp"
        app:layout_constraintTop_toBottomOf="@+id/startPickerYear"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
        app:layout_constraintStart_toEndOf="@+id/txtEndMonth"
        app:layout_constraintEnd_toStartOf="@+id/endPickerMonth"
        />

    <NumberPicker
        android:id="@+id/endPickerMonth"
        android:layout_width="@dimen/common_100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/endPickerYear"
        app:layout_constraintBottom_toBottomOf="@+id/endPickerYear"
        app:layout_constraintStart_toEndOf="@+id/endPickerYear"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_60dp"
        android:layout_marginTop="@dimen/common_20dp"
        android:layout_marginStart="@dimen/common_20dp"
        android:layout_marginEnd="@dimen/common_20dp"
        android:gravity="center"
        android:background="@drawable/bg_222222_r12"
        app:layout_constraintTop_toBottomOf="@+id/endPickerYear"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Common_Ok"
            android:textSize="@dimen/common_16dp"
            android:textColor="@color/color_222222"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>