<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_MemoListActivity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_50dp"
        android:background="@color/color_f1f1f1"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/common_10dp"
            android:paddingBottom="@dimen/common_10dp"
            android:text="@string/MemoListActivity_Title"
            android:textColor="@color/color_222222"
            android:textSize="22sp"
            />
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_MemoListActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_MemoListActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/txt_MemoListActivity_GuideMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MemoListActivity_GuideMessage"
        android:textSize="30sp"
        android:textColor="@color/color_80000000"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_MemoListActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>