<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.yjpapp.stockportfolio.dialog.CommonOneBtnDialog.CommonOneBtnData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/EditMainDialog_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common_10dp"
        android:layout_marginEnd="@dimen/common_10dp"
        android:background="@drawable/bg_ffffff_r12">

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_40dp"
            android:layout_marginBottom="@dimen/common_40dp"
            android:layout_marginStart="@dimen/common_20dp"
            android:layout_marginEnd="@dimen/common_20dp"
            android:gravity="center"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/common_15dp"
            android:text="@{data.noticeText}"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_50dp"
            android:background="@drawable/bg_e52b4e_r12_bottom_left_right"
            android:gravity="center"
            android:text="@{data.btnText}"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/common_15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
