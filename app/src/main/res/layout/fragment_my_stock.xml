                android:textColor="@color/color_222222"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/txt_Purchase_Price"
                app:layout_constraintStart_toEndOf="@+id/txt_Evaluation_Amount"
