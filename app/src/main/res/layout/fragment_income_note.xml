<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cons_IncomeNoteFragment_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_MainActivity_total_gain_losses"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_40dp"
        android:layout_gravity="top"
        android:background="@color/color_ffffff"
        android:paddingStart="@dimen/common_20dp"
        android:paddingEnd="@dimen/common_20dp"
        android:weightSum="20"
        app:layout_collapseMode="parallax"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_IncomeNoteActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_IncomeNoteActivity">

        <TextView
            android:id="@+id/txt_total_realization_gains_losses"
            android:layout_width="@dimen/common_60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:text="@string/common_realization_gains_losses"
            android:textColor="@color/color_222222"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_total_realization_gains_losses_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_total_realization_gains_losses_data"
            android:layout_width="@dimen/common_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/common_10dp"
            android:layout_marginEnd="@dimen/common_10dp"
            android:gravity="center"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/Common_Dummy_Data"
            android:textColor="@color/color_e52b4e"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_total_realization_gains_losses_percent"
            app:layout_constraintStart_toEndOf="@+id/txt_total_realization_gains_losses"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="650,000,000,000,000" />

        <TextView
            android:id="@+id/txt_total_realization_gains_losses_percent"
            android:layout_width="@dimen/common_60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:ellipsize="marquee"
            android:gravity="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/Common_Dummy_Data"
            android:textColor="@color/color_e52b4e"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_total_realization_gains_losses_data"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15%" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1dp"
        android:background="@color/color_line_1a000000"
        app:layout_constraintTop_toBottomOf="@+id/cons_MainActivity_total_gain_losses"
        />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/common_1dp"
        app:layout_constraintTop_toBottomOf="@+id/cons_MainActivity_total_gain_losses"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@color/color_ffffff"
            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40dp"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_MainActivity_Edit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_40dp"
                    android:layout_gravity="bottom"
                    android:paddingStart="@dimen/common_10dp"
                    android:paddingEnd="@dimen/common_20dp"
                    android:orientation="horizontal"
                    app:layout_collapseMode="parallax"
                    >

                    <SearchView
                        android:id="@+id/sv_MainActivity"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/common_30dp"
                        android:layout_marginEnd="@dimen/common_10dp"
                        android:queryHint="종목명 검색"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/lin_MainActivity_Filter"
                        />

                    <LinearLayout
                        android:id="@+id/lin_MainActivity_Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/common_10dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/txt_MainActivity_Edit"
                        >

                        <TextView
                            android:id="@+id/txt_MainActivity_Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Common_All"
                            android:textSize="16sp"
                            android:textColor="@color/color_222222"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/common_5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/arrow_bottom"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_MainActivity_Edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/Common_Edit"
                        android:textSize="16sp"
                        android:textColor="@color/color_222222"
                        app:layout_constraintTop_toTopOf="@+id/cons_MainActivity_Edit"
                        app:layout_constraintBottom_toBottomOf="@+id/cons_MainActivity_Edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/color_line_1a000000"
                    />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toBottomOf="@+id/appbar_layout"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_MainActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>