<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_MemoReadWriteActivity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_50dp"
        android:theme="@style/AppTheme"
        android:background="@color/color_f1f1f1"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_MemoReadWriteActivity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10dp"
        android:layout_marginStart="@dimen/common_20dp"
        android:layout_marginEnd="@dimen/common_20dp"
        android:hint="@string/MemoReadWriteActivity_Title_Hint"
        android:textColor="@color/color_222222"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_MemoReadWriteActivity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_marginTop="@dimen/common_10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="@dimen/common_20dp"
        android:layout_marginEnd="@dimen/common_20dp"
        android:hint="@string/MemoReadWriteActivity_Content_Hint"
        android:textColor="@color/color_222222"
        />

</LinearLayout>